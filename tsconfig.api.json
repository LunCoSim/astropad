{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist-api",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "lib": ["ES2020"],
    "rootDir": ".",
    "baseUrl": ".",
    "allowImportingTsExtensions": true,
    "noEmit": false,
    "verbatimModuleSyntax": false,
    "paths": {
      "@lib/*": ["./lib/*"]
    }
  },
  "include": ["api", "lib"],
  "exclude": ["node_modules", "dist", "src", "cli"]
}