{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist-api",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["./lib/*"]
    }
  },
  "include": ["api", "lib"],
  "exclude": ["node_modules", "dist", "src", "cli"]
}